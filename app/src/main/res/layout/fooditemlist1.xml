<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="25dp"
        android:id="@+id/titleTextView"
        android:paddingRight="70dp"
        android:paddingTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/quantityTextView"
        android:layout_toEndOf="@+id/quantityTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/priceTextView"

        android:layout_alignBottom="@+id/titleTextView"
        android:layout_alignRight="@+id/totalPrice"
        android:layout_alignEnd="@+id/totalPrice" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="It works!"
        android:id="@+id/totalPrice"
        android:scaleType="fitCenter"
        android:layout_below="@+id/priceTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/quantityTextView"
        android:layout_alignBottom="@+id/totalPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>