<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sankarmanoj.thefoodkingapp.FoodCart">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:padding="3dp"
        android:visibility="visible"
        android:background="@drawable/list_border"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/checkoutButton"
        android:layout_below="@+id/grandTotalTextView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grand Total : â‚¹ 100"
            android:textSize="24dp"
            android:visibility="visible"
            android:id="@+id/grandTotalTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
           />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Item(s)"
        android:textSize="24dp"
        android:visibility="visible"
        android:id="@+id/itemsTotalTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:visibility="invisible"
           android:text="Address for Delivery"
           android:textSize="20dp"
           android:id="@+id/addressTextView"
           android:gravity="center"
           android:layout_marginBottom="68dp"
           android:layout_above="@+id/commentsEditText"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text=""
        android:visibility="invisible"
        android:lines="2"
        android:gravity="top"
        android:id="@+id/addressEditText"
        android:layout_alignBaseline="@+id/addressTextView"
        android:layout_alignBottom="@+id/addressTextView"
        android:layout_toRightOf="@+id/addressTextView"
        android:layout_toEndOf="@+id/addressTextView" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Checkout"
        android:textColor="#ffffff"
        android:visibility="visible"
        android:background="@drawable/buttonshape"
        android:id="@+id/checkoutButton"
        android:layout_alignParentBottom="true"

        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="top"
        android:lines="8"
        android:inputType="textMultiLine"
        android:ems="10"
        android:text="Additional Comments"
        android:textColor="#b0b0b0"
        android:id="@+id/commentsEditText"
        android:visibility="invisible"
        android:layout_above="@+id/checkoutButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43dp" />


</RelativeLayout>